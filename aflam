<body>
    <header class="header">
        <h1>أحدث الأفلام 🎬</h1>
        <p>شاهد أحدث الإصدارات السينمائية وتصفح المشاهد الحصرية</p>
    </header>

    <div class="container">
        <div class="movies-grid" id="moviesContainer"></div>
    </div>

    <div class="trailer-container" id="trailerContainer">
        <span class="close-btn" onclick="closeTrailer()">&times;</span>
        <iframe class="trailer-video" id="trailerVideo" allowfullscreen></iframe>
    </div>

    <script>
        // بيانات الأفلام (يمكن استبدالها ببيانات حقيقية من API)
        const movies = [
            {
                title: "الفرسان الأخيرون",
                image: "https://source.unsplash.com/random/800x600?action-movie",
                description: "في عالم ما بعد الكارثة، مجموعة من المحاربين يحاولون إنقاذ الإنسانية من خطر مجهول.",
                trailer: "https://www.youtube.com/embed/5PSNL1qE6VY",
                rating: "★★★★☆",
                genre: ["أكشن", "خيال علمي"]
            },
            {
                title: "رحلة إلى المجهول",
                image: "https://source.unsplash.com/random/800x600?adventure-movie",
                description: "مغامرة مثيرة عبر الزمن بين عوالم متوازية وأسرار كونية غامضة.",
                trailer: "https://www.youtube.com/embed/d9MyW72ELq0",
                rating: "★★★★★",
                genre: ["مغامرة", "فانتازيا"]
            },
            {
                title: "ظل المدينة",
                image: "https://source.unsplash.com/random/800x600?drama-movie",
                description: "دراما إجتماعية تكشف أسرار عائلة تخفي ماضياً مظلماً تحت واجهة مثالية.",
                trailer: "https://www.youtube.com/embed/t433PEQGErc",
                rating: "★★★☆☆",
                genre: ["دراما", "تشويق"]
            }
        ];

        // توليد بطاقات الأفلام
        function renderMovies() {
            const container = document.getElementById('moviesContainer');
            container.innerHTML = movies.map(movie => `
                <div class="movie-card">
                    <div class="movie-thumbnail" onclick="playTrailer('${movie.trailer}')">
                        <img src="${movie.image}" alt="${movie.title}">
                        <i class="fas fa-play play-btn"></i>
                    </div>
                    <div class="movie-info">
                        <h3 class="movie-title">${movie.title}</h3>
                        <div class="rating">${movie.rating}</div>
                        ${movie.genre.map(g => `<span class="genre">${g}</span>`).join(' ')}
                        <p class="movie-description">${movie.description}</p>
                    </div>
                </div>
            `).join('');
        }

        // تشغيل المشاهد
        function playTrailer(url) {
            document.getElementById('trailerContainer').style.display = "flex";
            document.getElementById('trailerVideo').src = url;
        }

        // إغلاق المشهد
        function closeTrailer() {
            document.getElementById('trailerContainer').style.display = "none";
            document.getElementById('trailerVideo').src = "";
        }

        // التحميل الأولي
        window.onload = renderMovies;
    </script>
</body>
</html>